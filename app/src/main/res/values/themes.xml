<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Custom application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- A custom theme is for No ActionBar to our activity is added. This is created over here for
        Maintaining the Status Bar color in all the activities added with NoActionBar Theme.
        Which is material standard.

        Issue: parent="@style/Theme.AppCompat.Light.NoActionBar"
        Solution: parent="@style/Theme.MaterialComponents.Light.NoActionBar"

        Reference: https://www.udemy.com/course/android-kotlin-developer/learn/lecture/18000303#questions/12215974

        -->
    <style name="CustomNoActionBarTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <!-- A custom theme is added to our toolbar. For updating the Home Button and title Color as per theme. -->
    <style name="CustomToolbarStyle">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:colorControlNormal">#FFFFFF</item>
    </style>

</resources>